<ListComments>:
    md_bg_color: rgba(app.purpura)
    orientation: 'vertical'
    size_hint_y: None
    spacing: 0
    elevation: 0
    MDRelativeLayout:

        OneLineAvatarListItem:
            text: root.username
            divider: None
            _no_ripple_effect: True
            pos_hint: {'top': 1}
            ImageLeftWidget:
                source: root.avatar

            MDIconButton:
                icon: 'dots-vertical'
                icon_size: "28sp"
                theme_icon_color: "Custom"
                icon_color: rgba(app.blancop)
                pos_hint: {"center_x": .9, "center_y": .5}
        
        MDBoxLayout:
            height: "50dp"
            adaptive_height: True
            pos_hint: {'center_x': .51}
            MDLabel:
                text: 'Amen ' * 15
                size_hint_x: .35
                halign: 'left'
                valign: 'middle'
        MDSeparator:
            md_bg_color: rgba(app.blancop)
